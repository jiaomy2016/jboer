<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dcits.djk.manager.union.mapper.NoticeServiceMapper" >
  <resultMap id="BaseResultMap" type="com.dcits.djk.manager.single.model.BhAuthNoticeTemplate" >
    <id column="notice_temp_code" property="noticeTempCode" jdbcType="VARCHAR" />
    <result column="notice_temp_content" property="noticeTempContent" jdbcType="VARCHAR" />
  </resultMap>
 
  <sql id="Base_Column_List" >
    notice_temp_code, notice_temp_content
  </sql>
  
   <select id="getCountNoticeTemplateListByCaseOnPage" resultType="java.lang.Integer" >
    select count(*)
    from bh_auth_notice_template
    where 1=1
    <if test="tempContent!=null and tempContent!= ''">
			and  notice_temp_content like #{tempContent,jdbcType=CHAR}
	</if>
  </select>
  <select id="getNoticeTemplateListByCaseOnPage" resultMap="BaseResultMap"  >
    select 
    <include refid="Base_Column_List" />
    from bh_auth_notice_template
    where 1=1
    <if test="tempContent!=null and tempContent!= ''">
		and  notice_temp_content like #{tempContent,jdbcType=CHAR}
	</if>
    order by notice_temp_code
    limit #{page},#{rows}
  </select>
  
</mapper>